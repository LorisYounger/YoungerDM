<UserControl x:Name="MainControl" x:Class="DMYounger4.UserTalk"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DMYounger4"
             mc:Ignorable="d" d:DesignWidth="291">
    <Grid x:Name="UTMain" Background="#CCBBDEFB">
        <TextBlock x:Name="TUserName"  HorizontalAlignment="Left" Margin="54,4,0,0" VerticalAlignment="Top" Text="用户名" FontSize="16" TextWrapping="Wrap" Foreground="#F333" Background="#CC90CAF9" FontWeight="Bold" Padding="1"/>
        <TextBlock x:Name="TText"  HorizontalAlignment="Left" Margin="54,24,5,5" VerticalAlignment="Top" Text="妖妖式吾邀室幺九幺九妖妖式吾邀室幺九幺九" FontSize="16" TextWrapping="Wrap" Foreground="#F333"/>
        <Ellipse x:Name="EImage" HorizontalAlignment="Left" Height="40" Margin="5,5,0,0" Stroke="#F555" VerticalAlignment="Top" Width="40">
            <Ellipse.Fill>
                <ImageBrush ImageSource="Younger.png"/>
            </Ellipse.Fill>
        </Ellipse>
        <Border x:Name="BorderTime" BorderBrush="#FF42A5F5" BorderThickness="1" Height="3" VerticalAlignment="Top" Background="#CC42A5F5" HorizontalAlignment="Left" Width="291" />
    </Grid>
</UserControl>
